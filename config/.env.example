# ProManage Environment Configuration
# Copy this file to the appropriate location and fill in the values
# DO NOT commit actual .env files to version control!

# =============================================================================
# GENERAL
# =============================================================================

# Environment: development | staging | production
NODE_ENV=development

# Application Name
APP_NAME=ProManage

# API Port (default: 3001)
PORT=3001

# Application URL (used for CORS, webhooks, etc.)
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/promanage_dev

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# REDIS
# =============================================================================

# Redis Connection String
# Format: redis://[[username:]password@]host:port[/database]
REDIS_URL=redis://localhost:6379

# Redis Key Prefix (to avoid conflicts in shared Redis)
REDIS_PREFIX=promanage:

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Access Token Expiration (in minutes)
JWT_ACCESS_EXPIRES_IN=15

# JWT Refresh Token Expiration (in days)
JWT_REFRESH_EXPIRES_IN=7

# Bcrypt Salt Rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# =============================================================================
# FILE STORAGE (S3-Compatible)
# =============================================================================

# S3 Configuration (AWS S3, MinIO, DigitalOcean Spaces, etc.)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=promanage-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Use SSL for S3? (true for AWS, false for local MinIO)
S3_USE_SSL=false

# Public URL for uploaded files
S3_PUBLIC_URL=http://localhost:9000/promanage-uploads

# Max File Upload Size (in bytes, default: 10MB)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# EMAIL
# =============================================================================

# Email Service Provider (smtp | sendgrid | mailgun | ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# SendGrid (if using SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# From Email Address
EMAIL_FROM=noreply@promanage.app
EMAIL_FROM_NAME=ProManage

# =============================================================================
# LOGGING
# =============================================================================

# Log Level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# Pretty Print Logs (true for development, false for production)
LOG_PRETTY=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limit: Max requests per window
RATE_LIMIT_MAX=1000

# Rate Limit: Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# =============================================================================
# WEBSOCKET / REAL-TIME
# =============================================================================

# WebSocket Server URL
WS_URL=ws://localhost:3001

# WebSocket Path
WS_PATH=/socket.io

# Enable WebSocket Compression
WS_COMPRESSION=true

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry Environment
# SENTRY_ENVIRONMENT=development

# Enable Performance Monitoring
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# FEATURES & TOGGLES
# =============================================================================

# Enable/Disable Features
FEATURE_REGISTRATION_ENABLED=true
FEATURE_EMAIL_VERIFICATION_ENABLED=false
FEATURE_TWO_FACTOR_AUTH_ENABLED=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Apple Sign In (optional)
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY=your-apple-private-key

# =============================================================================
# MOBILE APP (for reference)
# =============================================================================

# These are used in apps/mobile/.env
# EXPO_PUBLIC_API_URL=http://localhost:3001
# EXPO_PUBLIC_WS_URL=ws://localhost:3001
# EXPO_PUBLIC_ENV=development

# =============================================================================
# WEB APP (for reference)
# =============================================================================

# These are used in apps/web/.env
# NEXT_PUBLIC_API_URL=http://localhost:3001
# NEXT_PUBLIC_WS_URL=ws://localhost:3001
# NEXT_PUBLIC_ENV=development
