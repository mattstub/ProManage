# ProManage Development Environment
# Copy to .env in your app directory for local development

# =============================================================================
# GENERAL
# =============================================================================

NODE_ENV=development
APP_NAME=ProManage (Dev)
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# DATABASE
# =============================================================================

# Local PostgreSQL (from docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/promanage_dev

# Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# REDIS
# =============================================================================

# Local Redis (from docker-compose)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=promanage:dev:

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Development JWT Secret (NOT for production!)
JWT_SECRET=dev-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15
JWT_REFRESH_EXPIRES_IN=7
BCRYPT_SALT_ROUNDS=10

# Allow all localhost origins
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local MinIO (from docker-compose)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=promanage-dev
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false
S3_PUBLIC_URL=http://localhost:9000/promanage-dev

# 10MB upload limit
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# EMAIL
# =============================================================================

# Use Mailtrap for development email testing
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-username
SMTP_PASS=your-mailtrap-password

EMAIL_FROM=dev@promanage.local
EMAIL_FROM_NAME=ProManage Dev

# =============================================================================
# LOGGING
# =============================================================================

# Verbose logging for development
LOG_LEVEL=debug
LOG_PRETTY=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Relaxed rate limiting for development
RATE_LIMIT_MAX=10000
RATE_LIMIT_WINDOW=900000

# =============================================================================
# WEBSOCKET
# =============================================================================

WS_URL=ws://localhost:3001
WS_PATH=/socket.io
WS_COMPRESSION=false

# =============================================================================
# MONITORING
# =============================================================================

# Disabled in development
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# =============================================================================
# FEATURES
# =============================================================================

# All features enabled for development
FEATURE_REGISTRATION_ENABLED=true
FEATURE_EMAIL_VERIFICATION_ENABLED=false
FEATURE_TWO_FACTOR_AUTH_ENABLED=false

# =============================================================================
# DEBUG & DEVELOPMENT
# =============================================================================

# Enable debug mode
DEBUG=true

# Show detailed error messages
SHOW_ERROR_DETAILS=true

# Disable caching for development
DISABLE_CACHE=true

# Seed database on startup (optional)
# AUTO_SEED_DATABASE=true
